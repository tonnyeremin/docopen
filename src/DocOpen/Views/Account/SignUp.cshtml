@{  
    ViewData["Title"] = "Create DocOpen account";  
}  
 <div class="page-section">
    <h1>@ViewData["Title"]</h1> 
    <div class="container">  
        <div class="row justify-content-md-center">          
            <div class="col-md-5">  
                <form asp-action="SignUp" method="post">
                    <div class="form-group row">  
                        <label class="col-sm-3 col-form-label">Email</label> 
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="Email" name="Email" placeholder="Enter email" required>
                        </div>   
                    </div>
                    <div class="form-group row">  
                        <label class="col-sm-3 col-form-label">Password</label> 
                        <div class="col-sm-9">
                            <input type="password" class="form-control" id="Password" name="Password" placeholder="Enter password" required>            
                        </div>  
                    </div>
                    <h3>Tell us more about yourself</h3>
                   <hr/>
                    <div class="form-group row">  
                        <label class="col-sm-3 col-form-label">First Name</label> 
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="FirstName" name="FirtName" placeholder="Enter first name" required>
                        </div>   
                    </div>
                     <div class="form-group row">  
                        <label class="col-sm-3 col-form-label">Second Name</label> 
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="SecondName" name="SecondName" placeholder="Enter second name" required>
                        </div>   
                    </div>
                    <div class="form-group row">  
                        <label class="col-sm-3 col-form-label">Phone Number</label> 
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="SecondName" name="SecondName" placeholder="Enter phone number" required>
                        </div>   
                    </div>
                    <div class="form-group row">  
                        <label class="col-sm-3 col-form-label">Web</label> 
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="WebPage" name="WebPage" placeholder="Enter personal web page or link to social profile">
                        </div>   
                    </div>
                     <div class="form-group row">  
                        <label class="col-sm-3 col-form-label">Country</label> 
                        <div class="col-sm-9">
                             <select class="form-control" id="Country" name="Country">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                             </select>
                        </div>   
                    </div>
                    <div class="form-group row">  
                        <label class="col-sm-3 col-form-label">City</label> 
                        <div class="col-sm-9">
                             <select class="form-control"  id="City" name="City">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                             </select>
                        </div>   
                    </div>
                    <div class="form-group row">  
                        <label class="col-sm-3 col-form-label">Address</label> 
                        <div class="col-sm-9">
                             <textarea class="form-control" id="Address" name="Address" rows="2"></textarea>
                        </div>   
                    </div>
                     <div class="form-group row">  
                        <label class="col-sm-3 col-form-label">Postal Code</label> 
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="PostCode" name="PostCode">
                        </div>   
                    </div>
                    <div class="form-group row">  
                         <input type="checkbox" class="form-check-input" id="TermsAgree" required>
                         <label class="form-check-label" for="exampleCheck1">By clicking below to signup, you're agreeing to our <a href="terms">terms of service</a></label>
                    </div>

                    <div class="form-check">  
                        <button type="submit" class="btn btn-primary">Create</button>  
                    </div>  
                </form>  
            </div>  
        </div>  
    </div> 
 </div> 